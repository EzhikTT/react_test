.ListItem
    width 460px

    img
        width 100%
        height auto

    .header
        font-size 1.3rem
        color black

    .desc
        font-size .8rem
        color grey

    .ListItem-body
        position relative
        > div
            padding 10px

        &_adout
            border 1px solid #608d99
            border-right 0
            border-left 0

        svg
            position absolute
            width 20px
            height 20px
            top 10px
            right 10px
            color blue



    .ListItem-head
        display flex
        padding 10px
        align-items center
        &_header
            margin 0 auto

        a
            text-decoration none
            color blue
            display flex
            align-items center

            svg
                width 20px
                height 20px