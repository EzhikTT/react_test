.List
    width 460px

    .List-body
        margin-top 10px
        padding-top 10px
        border-top 1px solid #608d99

    .List-item
        margin 10px
        border 1px solid #608d99
        border-radius 15px
        padding-bottom 10px
        img
            width 100%
            height auto
            border-radius 10px 10px 0 0
            margin-bottom 10px

        &_address, &_price
            color black
            font-size 1.3rem
            padding-left 10px

        &_metro
            color grey
            font-size 0.9rem
            margin-bottom 10px
            padding-left 10px

        a
            text-decoration none

        .List-item_link
            position relative

            svg
                position absolute
                width 20px
                height 20px
                top 10px
                right 10px
                color blue


    .List-body_swap
        display flex
        justify-content center
        div
            width 30%
            text-align center
            border 1px solid #608d99
            padding 10px

            &:first-child
                border-radius 10px 0 0 10px

            &:last-child
                border-radius 0 10px 10px 0

            &.active
                background-color blue
                color white

    .List-searchLine
        display flex
        border-radius 15px
        background-color #c6d3d9
        padding 5px

        svg
            width 20px
            height 20px
            color grey
            margin 5px

        input
            width 100%
            background-color transparent
            border none
            color black
            padding 5px
            font-size 1.1rem

            &:focus
                outline none